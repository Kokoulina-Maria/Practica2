@model Practica2.Models.Hall

@{
    ViewBag.Title = "Create";
}

<h1>Добавление зала</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p>
        Номер: @Html.EditorFor(model => model.Num, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Num, "", new { @class = "text-danger" })
    </p>

    <p>
        Тип: <select name="Type">
            <option value="2D"> 2D
            <option value="3D"> 3D
            <option value="4D"> 4D
            <option value="IMAX"> IMAX
            <option value="VIP"> VIP
        </select>
        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
    </p>

    <p>
        Количество рядов: @Html.EditorFor(model => model.AmountOfRow, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.AmountOfRow, "", new { @class = "text-danger" })
    </p>

    <p>
    Количество мест в ряду: @Html.EditorFor(model => model.AmountOfSeats, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.AmountOfSeats, "", new { @class = "text-danger" })
    </p>

    <p>
        Кинотеатр: @Html.DropDownList("Cinema", (IEnumerable<SelectListItem>)ViewData["Cinemas"])
        @Html.ValidationMessage("Cinema", new { @class = "text-danger" })
    </p>
            <input type="submit" value="Добавить" class="btn btn-default" />
}

<div>
    @Html.ActionLink("Вернуться к списку залов", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
