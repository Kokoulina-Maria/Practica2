@model IEnumerable<Practica2.Models.Film>

@{
    ViewBag.Title = "Find";
}

@using (Html.BeginForm())
{
    <h1>Поиск фильмов</h1>
    <FORM>
        <FIELDSET>
            <LEGEND><A name="Find">Критерии поиска</A></LEGEND>
            <p>
                <select name="Entity">
                    <option value="Название"> Название
                    <option value="Год"> Год
                    <option value="Длительность"> Длительность
                    <option value="Возрастное ограничение"> Возрастное ограничение
                    <option value="Режиссер"> Режиссер
                </select>
                <select name="Sign">
                    <option value="="> =
                    <option value="!="> !=
                    <option value=">"> >
                    <option value="<"> <
                    <option value=">="> >=
                    <option value="<="> <=
                </select>
                @Html.TextBox("Text")
                @Html.ValidationMessage("Exception")
            </p>
            <p>
                <select name="Extra">
                    <option value="И"> И
                    <option value="ИЛИ"> ИЛИ
                </select>
                <input type="submit" value="Поиск">
            </p>
        </FIELDSET>
    </FORM>
<PRE>
		
</PRE>
    <p>
        @Html.ActionLink("Выгрузить отчет", "ExportToExcel", new { back = "Find" })
    </p>
    <div>
        <center>
            <table>
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        Год
                    </th>
                    <th>
                        Длительность
                    </th>
                    <th>
                        Возрастное ограничение
                    </th>
                    <th>
                        Режиссер
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            &nbsp;
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            &nbsp;
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            &nbsp;
                            @Html.DisplayFor(modelItem => item.length)
                        </td>
                        <td>
                            &nbsp;
                            @Html.DisplayFor(modelItem => item.AgeLimit)
                        </td>
                        <td>
                            &nbsp;
                            @Html.DisplayFor(modelItem => item.Producer)
                        </td>
                        <td>
                            &nbsp;
                            @Html.ActionLink("Информация", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Редактировать", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Удалить", "Delete", new { id = item.ID, back = "Find" })
                        </td>
                    </tr>
                }

            </table>
        </center>
    </div>
}

