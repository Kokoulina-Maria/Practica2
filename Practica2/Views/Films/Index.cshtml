@model IEnumerable<Practica2.Models.Film>

@{
    ViewBag.Title = "Index";
}

<h1>Фильмы в прокате:</h1>

<p>
    @Html.ActionLink("Добавить фильм", "Create") |
    @Html.ActionLink("Поиск", "Find") |
    @Html.ActionLink("Выгрузить отчет", "ExportToExcel", new { back = "Index" })
</p>
<PRE>
		
</PRE>
<div>
    <center>
        <table>
            <tr>
                <th>
                    Название
                </th>
                <th>
                    Год
                </th>
                <th>
                    Длительность
                </th>
                <th>
                    Возрастное ограничение
                </th>
                <th>
                    Режиссер
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        &nbsp;
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        &nbsp;
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        &nbsp;
                        @Html.DisplayFor(modelItem => item.length)
                    </td>
                    <td>
                        &nbsp;
                        @Html.DisplayFor(modelItem => item.AgeLimit)
                    </td>
                    <td>
                        &nbsp;
                        @Html.DisplayFor(modelItem => item.Producer)
                    </td>
                    <td>
                        &nbsp;
                        @Html.ActionLink("Информация", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Удалить", "Delete", new { id = item.ID, back = "Index" })
                    </td>
                </tr>
            }

        </table>
    </center>
</div>
